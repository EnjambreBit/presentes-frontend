{{#popup-layer maxWidth=450 minWidth=300}}
<div class="w-100 pt2 pl4 pr2 pb3 bg-white br4 ba bw2 {{color-de-categoria categoria}}">
  <section class="cf w-100 ">
    <div class="fl w-25 pt3">
      <img
          src="{{imagen}}"
          class="br-100 ba {{color-de-categoria categoria}} bw2 h3 w3 dib v-mid" alt="avatar">
    </div>
    <div class="fl w-75 pl3">
      <h3>
        {{#if (eq categoria "Ataques a lugares")}}
          {{modelo.nombre}}
        {{else}}
          {{nombre}}
        {{/if}}
      </h3>
      <div class="gris mt1">
        <i class="fas fa-calendar-alt"></i> {{moment-format fecha 'DD.MM.YYYY'}}
      </div>
      <div class="gris mt1">
        <i class="fas fa-map-marker-alt"></i>
        {{#if calle}}
          {{calle}}
        {{/if}}
        {{#if (eq provincia "Ciudad Autónoma de Buenos Aires")}}
          {{localidad}}, CABA
        {{else}}
          {{localidad}}, {{provincia}}
        {{/if}}
      </div>
      {{#if edad}}
        <div class="gris mt1">
          Edad {{edad}}
        </div>
      {{/if}}
      <div class="{{color-de-categoria categoria}} mt1">
        <img src="{{category-icon-small categoria}}" height=14 class="v-mid"> {{categoria}}
        {{!-- <i class="fas fa-circle"></i> {{categoria}} --}}
      </div>
    </div>
  </section>
  <section class="cf w-100 mt2 black">
    {{#if (eq categoria "Muerte por travesticidio social")}}
      {{modelo.nombreCompleto}},
      {{#if modelo.edad}}
        {{modelo.edad}} años.
      {{else}}
        .
      {{/if}}
      {{#if modelo.lugarDeNacimiento}}
        Oriunda de {{modelo.lugarDeNacimiento}},
        {{#if modelo.paisDeOrigen}}
          {{modelo.paisDeOrigen}}.
        {{else}}
        .
        {{/if}}
      {{/if}}

      {{#if modelo.dondeVivia}}
        Vivía en {{modelo.dondeVivia}}.
      {{/if}}
      {{#if modelo.fechaDelHecho}}
        Falleció el {{moment-format modelo.fechaDelHecho 'D \d\e MMMM'}}
        {{#if modelo.causaDeLaMuerte}}
         debido a {{modelo.causaDeLaMuerte}}.
         {{else}}
         .
        {{/if}}
      {{/if}}

    {{else}}
      {{#if copete}}
        {{copete}}
      {{else}}
        <div class="db w5"></div>
      {{/if}}
    {{/if}}

  </section>
  <section class="cf w-100 mt2 tr pr3">
    {{#if ficha}}
      {{#if session.isAuthenticated}}
        {{#link-to 'app.casos.detalle' id class="gris"}}Ver ficha{{/link-to}}
      {{else}}
        {{#link-to 'publico.casos.detalle' id class="gris"}}Ver ficha{{/link-to}}
      {{/if}}
    {{/if}}
    {{#if (and ficha nota)}}
      |
    {{/if}}
    {{#if nota}}
      <a href="{{nota}}" target="_blank" class="gris">Ver nota</a>
    {{/if}}
  </section>
</div>
{{/popup-layer}}
